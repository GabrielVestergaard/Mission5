@{
    ViewData["Title"] = "Tutoring Calculator";
}

<div class="text-center mb-4">
    <h1 class="display-4 text-mu">Manchester United Tutoring</h1>
    <p class="lead">Calculate the cost of one-on-one tutoring about the Red Devils</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <div class="mb-3">
                    <label for="hours" class="form-label">Number of hours needed</label>
                    <input type="number" id="hours" class="form-control" placeholder="Enter hours" min="0" step="0.5" />
                    <span id="hoursError" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label for="rate" class="form-label">Hourly rate (per hour)</label>
                    <input type="text" id="rate" class="form-control" value="$50.00" readonly />
                </div>
                <div class="mb-3">
                    <button type="button" id="calculateBtn" class="btn btn-mu">Calculate Total</button>
                </div>
                <div class="mb-0">
                    <label for="total" class="form-label">Total</label>
                    <input type="text" id="total" class="form-control" readonly placeholder="0.00" />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.text-mu { color: var(--mu-red, #DA291C) !important; }
.btn-mu { background-color: var(--mu-red, #DA291C); color: white; border: none; }
.btn-mu:hover { background-color: var(--mu-red-dark, #a01f15); color: white; }
</style>

@section Scripts {
    <script src="~/js/calculator.js" asp-append-version="true"></script>
}
